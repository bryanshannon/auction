
<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Bidder</th>
      <th>Amount</th>
      <th>Created At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.item.name %></td>
        <td><%= bid.bidder %></td>
        <td><%= bid.amount %></td>
        <td><%= bid.created_at %></td>
      <!-- <td><%= link_to 'Show', bid %></td>
       <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
        <td><%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      -->
      </tr>
    <% end %>
  </tbody>
</table>

