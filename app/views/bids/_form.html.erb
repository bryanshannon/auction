<%= simple_form_for(@bid) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :amount %>
    <%= f.association :item %>
    <%= f.input :bidder %>
    
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Cancel (Bid on a different item)', items_path %>
  </div>

<% end %>
