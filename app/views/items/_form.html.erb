<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :mininum_bid %>
    <%= f.input :bid_increment %>
    <%= f.input :image %>
    <%= f.input :donator %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
